# Polymarket Frontrun Bot Configuration
# =====================================
# Copy this file to .env and fill in your values

# REQUIRED: Your Polygon wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# OPTIONAL: Polymarket API credentials (auto-derived from PRIVATE_KEY if not set)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# OPTIONAL: Custom RPC URL (default: public Polygon RPC)
RPC_URL=https://polygon-rpc.com

# Trading Parameters
BANKROLL=100.0
MAX_TRADE_PERCENT=1.0
MICRO_ORDER_SIZE=3
SPREAD_THRESHOLD=0.10
POLLING_INTERVAL=0.5

# Risk Management
MAX_DAILY_LOSS_PERCENT=5.0
MAX_CONCURRENT_TRADES=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log
